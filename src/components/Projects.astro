---
import NextJSIcon from "./icons/NextJS.astro";
import TailwindIcon from "./icons/Tailwind.astro";
import PostgresqlIcon from "./icons/Postgresql.astro";
import ReactIcon from "./icons/React.astro";
import SupabaseIcon from "./icons/Supabase.astro";
import ExternalLinkIcon from "./icons/ExternalLink.astro";
import { getAllProjects } from "../data/projectsData";
import type { Locale } from "../i18n/translations";
import { getTranslations } from "../i18n/translations";

interface Props {
  locale?: Locale;
}

const { locale = "en" } = Astro.props;
const t = getTranslations(locale);
const projects = getAllProjects(locale);

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "text-black bg-white",
    icon: NextJSIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
  POSTGRESQL: {
    name: "PostgreSQL",
    class: "bg-[#336791ff] text-white",
    icon: PostgresqlIcon,
  },
  REACT: {
    name: "React",
    class: "bg-[#61DAFB] text-black",
    icon: ReactIcon,
  },
  SUPABASE: {
    name: "Supabase",
    class: "bg-[#3ECF8E] text-black",
    icon: SupabaseIcon,
  },
};

// Map technologies to tags
const getTags = (technologies: string[]) => {
  const tagMap: Record<string, typeof TAGS[keyof typeof TAGS]> = {
    "Next.js": TAGS.NEXT,
    "Next.js 13": TAGS.NEXT,
    "Tailwind CSS": TAGS.TAILWIND,
    "PostgreSQL": TAGS.POSTGRESQL,
    "React": TAGS.REACT,
    "React 18": TAGS.REACT,
    "Supabase": TAGS.SUPABASE,
  };
  
  return technologies
    .filter(tech => tagMap[tech])
    .map(tech => tagMap[tech]);
};

// Determine project path based on locale
const getProjectPath = (slug: string, locale: Locale) => {
  if (locale === "es") {
    return `/es/proyectos/${slug}`;
  }
  return `/projects/${slug}`;
};
---

<div class="w-full md:flex items-center justify-center mt-20">
  <div
    class="h-full xl:h-[30rem] flex flex-col xl:flex-row flex-nowrap justify-center gap-8"
  >
    {
      projects.map((project, index) => {
        const cardId = `c${index + 1}`;
        const tags = getTags(project.technologies);
        const projectPath = getProjectPath(project.slug, locale);
        
        return (
          <article>
            <input type="radio" name="slide" id={cardId} checked={index === 0} />
            <label
              for={cardId}
              class="card xl:w-[80px] bg-center xl:min-h-[450px] bg-cover cursor-pointer overflow-hidden flex items-end rounded-lg w-[80vw] m-auto min-h-[500px] xl:h-full transition-opacity ease-in-out delay-100"
              style={`background-image: url('${project.heroImage}')`}
            >
              <div class="flex flex-row items-end cursor-default row">
                <div class="flex flex-col justify-center overflow-hidden h-auto w-[80vw] opacity-100 xl:opacity-0 bg-black/90 p-4 pl-8 pr-12 rounded-t-lg xl:rounded-tl-lg relative description transition-opacity ease-in-out">
                  {project.liveUrl && (
                    <a
                      class="absolute top-0 right-0 bg-[#f5a64b]/90 text-white pt-1 pb-2 pl-2 pr-1 rounded-bl-md transition hover:text-[#f5a64b] hover:bg-white hover:ease-in-out cursor-pointer"
                      href={project.liveUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      aria-label={`${t.projects.viewLive} ${project.title}`}
                    >
                      <ExternalLinkIcon />
                    </a>
                  )}

                  <h3 class="text-2xl font-semibold text-[#f5a64b] mb-2">
                    {project.title}
                    {project.featured && (
                      <span class="ml-2 text-xs bg-[#f5a64b]/20 text-[#f5a64b] px-2 py-1 rounded-full">
                        {t.projects.featured}
                      </span>
                    )}
                  </h3>
                  
                  <p class="text-lg mb-4 text-pretty text-gray-200 w-full max-w-[35rem]">
                    {project.description}
                  </p>
                  
                  <ul class="flex gap-4 md:gap-2 flex-row mb-4 flex-wrap">
                    {tags.map((tag) => (
                      <li>
                        <span
                          class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}
                        >
                          <tag.icon class="size-4" />
                          {tag.name}
                        </span>
                      </li>
                    ))}
                  </ul>

                  <a
                    href={projectPath}
                    class="mt-2 inline-flex items-center gap-2 text-sm text-[#f5a64b] hover:text-white transition-colors group"
                  >
                    {t.projects.viewCaseStudy}
                    <svg 
                      class="w-4 h-4 group-hover:translate-x-1 transition-transform" 
                      fill="none" 
                      stroke="currentColor" 
                      viewBox="0 0 24 24"
                    >
                      <path 
                        stroke-linecap="round" 
                        stroke-linejoin="round" 
                        stroke-width="2" 
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                  </a>
                </div>
              </div>
            </label>
          </article>
        );
      })
    }
  </div>
</div>

<style>
  .card {
    transition: 0.6s cubic-bezier(0.28, -0.03, 0, 0.99);
    box-shadow: 0px 10px 30px -5px rgba(0, 0, 0, 0.8);
  }

  .card > .row {
    color: white;
    display: flex;
    flex-wrap: nowrap;
  }

  .card > .description {
    /* Mobile: always visible, no transform */
    transform: translateY(0);
    transition-delay: 0.3s;
    transition: all 0.3s ease;
  }

  .description h4 {
    text-transform: uppercase;
  }

  input {
    display: none;
  }

  /* Desktop accordion behavior */
  @media (width > 1200px) {
    .card > .description {
      /* Desktop: hidden by default with transform */
      opacity: 0 !important;
      transform: translateY(30px);
    }

    input:checked + label {
      width: 600px;
    }

    input:checked + label .description {
      opacity: 1 !important;
      transform: translateY(0) !important;
    }
  }

  /* Mobile: all projects visible */
  @media (width <= 1200px) {
    .card {
      width: 80vw;
      min-height: 500px;
    }

    .card > .description {
      opacity: 1 !important;
      transform: translateY(0) !important;
    }
  }
</style>